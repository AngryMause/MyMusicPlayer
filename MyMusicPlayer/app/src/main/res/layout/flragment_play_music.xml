<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/container_background">


    <TextView
        android:id="@+id/tb_back_play"
        android:layout_width="20dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_arrow_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/song_name_tv"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <TextView
        android:id="@+id/tv_curent_list"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_list_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toEndOf="@+id/tb_back_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/artist_name_tv"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:hint="example Name Artist"
        android:textAlignment="center"
        android:textColorHint="@color/text_no_action_color"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_name_tv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/shaffle_song_tv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_shaffle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cercle_song_tv"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previous_song_tv" />

    <TextView
        android:id="@+id/cercle_song_tv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/ic_cercle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/play_pause_song_tv"
        app:layout_constraintTop_toBottomOf="@+id/next_song_tv"
        app:layout_constraintVertical_bias="0.627" />

    <TextView
        android:id="@+id/song_name_tv"
        android:layout_width="237dp"
        android:layout_height="34dp"
        android:hint="SONG NAME"
        android:textAlignment="center"
        android:textColor="@color/text_no_action_color"
        android:textColorHint="@color/text_no_action_color"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.601" />

    <ImageView
        android:id="@+id/song_image_tv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/shape_baton"
        android:src="@drawable/ic_mask_group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />

    <TextView
        android:id="@+id/cur_time_song_tv"
        android:layout_width="50dp"
        android:layout_height="26dp"
        android:hint="0:00"
        android:textAlignment="center"
        android:textColorHint="@color/text_no_action_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/seekBar"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <TextView
        android:id="@+id/total_time_song_tv"
        android:layout_width="50dp"
        android:layout_height="26dp"
        android:layout_marginEnd="36dp"
        android:hint="3:15"
        android:textAlignment="center"
        android:textColor="@color/text_no_action_color"
        android:textColorHint="@color/text_no_action_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/seekBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="296dp"
        android:layout_height="34dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/play_pause_song_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_name_tv"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/previous_song_tv"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/exo_icon_previous"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <TextView
        android:id="@+id/play_pause_song_tv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="172dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/ic_pause_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toEndOf="@+id/previous_song_tv"
        app:layout_constraintTop_toTopOf="@+id/song_name_tv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/next_song_tv"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_skip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toEndOf="@+id/play_pause_song_tv"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintVertical_bias="0.525" />


</androidx.constraintlayout.widget.ConstraintLayout>