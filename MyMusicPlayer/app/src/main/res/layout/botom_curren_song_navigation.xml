<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_botom_current_song_layout"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/current_song_icon_im"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_mask_group_three" />

    <TextView
        android:id="@+id/tv_current_song_artist_name"
        android:layout_width="56dp"
        android:layout_height="18dp"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="18dp"
        android:hint="Artist"
        android:textColor="@color/text_no_action_color"
        android:textColorHint="@color/text_no_action_color" />

    <TextView
        android:id="@+id/tv_current_song_name"
        android:layout_width="98dp"
        android:layout_height="20dp"
        android:layout_marginLeft="218dp"
        android:layout_marginTop="18dp"
        android:hint="Song Name"
        android:textColor="@color/text_no_action_color"
        android:textColorHint="@color/text_no_action_color" />

    <ImageView
        android:id="@+id/btn_play_pause"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_pause"
        android:layout_marginRight="18dp" />


</RelativeLayout>
